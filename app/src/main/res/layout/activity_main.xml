<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="calculateur de calories "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:textSize="35sp"
        android:background="#8E24AA"
        android:textColor="@color/white"

        />
 <EditText
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="saisir votre poids  Kg "
     android:gravity="center"
     android:inputType="number"
     android:textSize="25sp"
     android:background="#FDD835"
     android:layout_marginBottom="15dp"
     android:id="@+id/ed1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="saisir votre age  Kg "
        android:gravity="center"
        android:inputType="number"
        android:textSize="25sp"
        android:background="#FDD835"
        android:layout_marginBottom="15dp"
        android:id="@+id/ed2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="saisir votre taille  Kg "
        android:gravity="center"
        android:inputType="number"
        android:textSize="25sp"
        android:background="#FDD835"
        android:layout_marginBottom="15dp"
        android:id="@+id/ed3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sexe : "
        android:textSize="25sp"
        android:layout_marginBottom="15dp"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rg1">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="homme"
            android:textSize="25sp"
            android:layout_marginRight="15dp"
             android:checked="true"
            android:id="@+id/rd1"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="femme"
            android:textSize="25sp"
            android:id="@+id/rd2"

            />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niveau d'activite  : "
        android:textSize="25sp"

        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/rg2">
        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Secondaire "
        android:textSize="25sp"
            android:checked="true"
            android:id="@+id/rd3"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Profil legement actif "
            android:textSize="25sp"
            android:id="@+id/rd4"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil actif "
            android:textSize="25sp"
            android:id="@+id/rd5"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil tres actif "
            android:textSize="25sp"
            android:id="@+id/rd6"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Calculer "
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:background="@color/ABDU"
            android:layout_marginRight="10dp"
            android:id="@+id/btncalculer"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="initialaiser"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:background="@color/ABDU"
            android:id="@+id/btninitialiser"

            />

    </LinearLayout>






</LinearLayout>